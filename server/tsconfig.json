{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "..",
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "../database/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
